<% content_for :main_content do %>
  <form class="max-w-screen-md mx-auto" method="post" action="<%= create_confession_path %>">
    <div class="mb-5">
      <label for="title" class=" mb-2 text-sm font-medium text-gray-900">Confession challenge</label>
      <input type="input" value="<%= @challenge.title %>" id="title" name="confession[title]" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500  w-full p-2.5" disabled>
    </div>
    <label for="body" class=" mb-2 text-sm font-medium text-gray-900">Your confession</label>
    <textarea id="body" name="confession[body]" rows="4" class="p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500" placeholder="Leave a your confession"></textarea>
    <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mb-10  mt-2">Submit</button>
    <%= hidden_field_tag 'confession[challenge_id]', @challenge.id %>
    <%= hidden_field_tag 'confession[title]', @challenge.title %>
  </form>
<%end%>